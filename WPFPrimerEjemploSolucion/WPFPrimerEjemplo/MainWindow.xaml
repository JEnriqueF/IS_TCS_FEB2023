<Window x:Class="WPFPrimerEjemplo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFPrimerEjemplo"
        mc:Ignorable="d"
        Title="Mi primer ventana en WPF C#" Height="450" Width="800">
    <Grid>
        <Label Content="Ingresa tu nombre:" HorizontalAlignment="Left" Margin="143,180,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbNombre" HorizontalAlignment="Left" Margin="269,180,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="335" TextChanged="TextBox_TextChanged" Height="26"/>
        <Button Content="Saludar" HorizontalAlignment="Left" Margin="633,183,0,0" VerticalAlignment="Top" Width="65" Click="Saludar"/>
        <Label x:Name="lbSaludo" Content="" HorizontalAlignment="Left" Margin="143,259,0,0" VerticalAlignment="Top" Width="555"/>
    </Grid>
</Window>
